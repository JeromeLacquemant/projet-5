Options +FollowSymLinks
RewriteEngine On
RewriteBase /
Options -Indexes

RewriteCond %{HTTP_HOST} ^projet-5.jeromelacquemant.fr/$
RewriteRule ^(.*)   http://www.projet-5.jerome.lacquemant.fr/$1  [QSA,L,R=301]

RewriteRule ^accueil-de-jerome$ /index.php?page=home_cv [L]
RewriteRule ^article/([a-z0-9-]+)-([0-9]+)$ /index.php?page=post&titre=$1&id=$2 [L]
RewriteRule ^article/([a-z0-9-]+)-([0-9]+)$ /index.php?page=post&titre=$1&id=$2 [L]
RewriteRule ^articles-a-la-une$ /index.php?page=home [L]
RewriteRule ^ensemble-des-articles$ /index.php?page=blog [L]
RewriteRule ^connexion-espace-membre$ /index.php?page=login [L]
RewriteRule ^dashboard$ /index.php?page=dashboard
RewriteRule ^ecrire-un-article /index.php?page=write
RewriteRule ^liste-de-tous-les-articles$ index.php?page=list
RewriteRule ^gestion-des-admins-et-modos$ index.php?page=settings
RewriteRule ^nouveau-moderateur$ index.php?page=new
RewriteRule ^modifier-un-article/([a-z0-9-]+)-([0-9]+)$ /index.php?page=postback&titre=$1&id=$2 [L]


#GESTION DES ERREURS
ErrorDocument 400 /views/frontend/error.php
ErrorDocument 401 /views/frontend/error.php
ErrorDocument 402 /views/frontend/error.php
ErrorDocument 403 /views/frontend/error.php
ErrorDocument 404 /views/frontend/error.php
ErrorDocument 405 /views/frontend/error.php
ErrorDocument 500 /views/frontend/error.php
ErrorDocument 501 /views/frontend/error.php
ErrorDocument 502 /views/frontend/error.php
ErrorDocument 503 /views/frontend/error.php
ErrorDocument 504 /views/frontend/error.php
ErrorDocument 505 /views/frontend/error.php